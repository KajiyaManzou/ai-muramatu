{
  "name": "ai-Muramatu Backend + Frontends",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "backend-dev",
  "workspaceFolder": "/workspaces/ai-Muramatu",
  "runServices": [
    "frontend1",
    "frontend2"
  ],
  "overrideCommand": false,
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nvmInstallGlobally": [
        "pnpm"
      ]
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "containerEnv": {
    "FRONTEND1_DIR": "apps/frontend1",
    "FRONTEND2_DIR": "apps/frontend2",
    "BACKEND_DIR": "backend"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/ai-Muramatu,type=bind,consistency=cached"
  ],
  "forwardPorts": [8000, 3000, 5173],
  "portsAttributes": {
    "8000": { "label": "Backend API" },
    "3000": { "label": "Frontend 1" },
    "5173": { "label": "Frontend 2" }
  },
  "postCreateCommand": "bash .devcontainer/init.sh",
  "postStartCommand": "bash .devcontainer/run-backend.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
